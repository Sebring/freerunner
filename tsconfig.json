{
  "include": ["src", "lib"],
  "compilerOptions": {
      "target": "ES2016",
      "lib": ["ES2016", "DOM"],
      "typeRoots": ["./types"],
      "outDir": "./build",
      "declaration": true,
      "strict": true,
      "strictNullChecks": false,
      "moduleResolution": "node",
      "module": "commonjs"
  },
  "exclude": ["node_modules", "/types", "/dist", "/build"]
}